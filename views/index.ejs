<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold mb-4">
                    <%= 'Streamline Your Supply Chain' %>
                </h1>
                <p class="lead mb-5">
                    <%= 'Connect vendors and wholesalers with ease and efficiency.' %>
                </p>
                <div class="d-flex justify-content-center gap-3 flex-wrap">
                    <a href="/auth/register" class="btn btn-light btn-lg">
                        <i data-feather="user-plus" class="me-2"></i>
                        <%= 'Get Started' %>
                    </a>
                    <a href="/auth/login" class="btn btn-outline-light btn-lg">
                        <i data-feather="log-in" class="me-2"></i>
                        <%= 'Log In' %>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center mb-5">
                <h2 class="h1 mb-3"><%= 'Platform Features' %></h2>
                <p class="lead text-muted"><%= 'Designed to serve both vendors and wholesalers with powerful tools.' %></p>
            </div>
        </div>
        
        <div class="row g-4">
            <!-- For Vendors -->
            <div class="col-md-6">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-primary bg-opacity-10 rounded-3 p-3 me-3">
                                <i data-feather="shopping-cart" class="text-primary" style="width: 24px; height: 24px;"></i>
                            </div>
                            <h4 class="card-title mb-0"><%= 'For Vendors' %></h4>
                        </div>
                        <p class="card-text text-muted mb-4">
                            <%= 'Manage your products, track orders, and grow your business.' %>
                        </p>
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <i data-feather="check" class="text-success me-2" style="width: 16px; height: 16px;"></i>
                                <%= 'Easy product listing' %>
                            </li>
                            <li class="mb-2">
                                <i data-feather="check" class="text-success me-2" style="width: 16px; height: 16px;"></i>
                                <%= 'Real-time order tracking' %>
                            </li>
                            <li class="mb-2">
                                <i data-feather="check" class="text-success me-2" style="width: 16px; height: 16px;"></i>
                                <%= 'Automated invoicing' %>
                            </li>
                            <li class="mb-2">
                                <i data-feather="check" class="text-success me-2" style="width: 16px; height: 16px;"></i>
                                <%= 'Performance analytics' %>
                            </li>
                        </ul>
                        <a href="/auth/register" class="btn btn-outline-primary">
                            <%= 'Join as Vendor' %>
                        </a>
                    </div>
                </div>
            </div>
            
            <!-- For Wholesalers -->
            <div class="col-md-6">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-success bg-opacity-10 rounded-3 p-3 me-3">
                                <i data-feather="truck" class="text-success" style="width: 24px; height: 24px;"></i>
                            </div>
                            <h4 class="card-title mb-0"><%= 'For Wholesalers' %></h4>
                        </div>
                        <p class="card-text text-muted mb-4">
                            <%= 'Discover vendors, manage contracts, and streamline deliveries.' %>
                        </p>
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <i data-feather="check" class="text-success me-2" style="width: 16px; height: 16px;"></i>
                                <%= 'Browse vendor listings' %>
                            </li>
                            <li class="mb-2">
                                <i data-feather="check" class="text-success me-2" style="width: 16px; height: 16px;"></i>
                                <%= 'Create and manage contracts' %>
                            </li>
                            <li class="mb-2">
                                <i data-feather="check" class="text-success me-2" style="width: 16px; height: 16px;"></i>
                                <%= 'Track delivery performance' %>
                            </li>
                            <li class="mb-2">
                                <i data-feather="check" class="text-success me-2" style="width: 16px; height: 16px;"></i>
                                <%= 'Monitor earnings and reports' %>
                            </li>
                        </ul>
                        <a href="/auth/register" class="btn btn-outline-success">
                            <%= 'Join as Wholesaler' %>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- How It Works Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center mb-5">
                <h2 class="h1 mb-3"><%= 'How It Works' %></h2>
                <p class="lead text-muted"><%= 'A simple 3-step process to get started.' %></p>
            </div>
        </div>
        
        <div class="row g-4">
            <div class="col-md-4 text-center">
                <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                    <i data-feather="user-plus" class="text-primary" style="width: 32px; height: 32px;"></i>
                </div>
                <h5><%= 'Sign Up' %></h5>
                <p class="text-muted"><%= 'Create your account as a vendor or wholesaler.' %></p>
            </div>
            <div class="col-md-4 text-center">
                <div class="bg-success bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                    <i data-feather="file-text" class="text-success" style="width: 32px; height: 32px;"></i>
                </div>
                <h5><%= 'Set Up Contracts' %></h5>
                <p class="text-muted"><%= 'Define product terms and delivery schedules.' %></p>
            </div>
            <div class="col-md-4 text-center">
                <div class="bg-warning bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                    <i data-feather="truck" class="text-warning" style="width: 32px; height: 32px;"></i>
                </div>
                <h5><%= 'Start Delivering' %></h5>
                <p class="text-muted"><%= 'Track deliveries and manage performance.' %></p>
            </div>
        </div>
    </div>
</section>
