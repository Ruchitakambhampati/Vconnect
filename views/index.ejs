                                <i data-feather="truck" class="text-success" style="width: 24px; height: 24px;"></i>
                            </div>
                            <h4 class="card-title mb-0"><%= __('home.features.wholesalers.title') %></h4>
                        </div>
                        <p class="card-text text-muted mb-4">
                            <%= __('home.features.wholesalers.description') %>
                        </p>
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <i data-feather="check" class="text-success me-2" style="width: 16px; height: 16px;"></i>
                                <%= __('home.features.wholesalers.feature1') %>
                            </li>
                            <li class="mb-2">
                                <i data-feather="check" class="text-success me-2" style="width: 16px; height: 16px;"></i>
                                <%= __('home.features.wholesalers.feature2') %>
                            </li>
                            <li class="mb-2">
                                <i data-feather="check" class="text-success me-2" style="width: 16px; height: 16px;"></i>
                                <%= __('home.features.wholesalers.feature3') %>
                            </li>
                            <li class="mb-2">
                                <i data-feather="check" class="text-success me-2" style="width: 16px; height: 16px;"></i>
                                <%= __('home.features.wholesalers.feature4') %>
                            </li>
                        </ul>
                        <a href="/auth/register" class="btn btn-outline-success">
                            <%= __('home.features.wholesalers.joinButton') %>
