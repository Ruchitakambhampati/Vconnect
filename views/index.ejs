                        <a href="/auth/register" class="btn btn-outline-primary">
                            <%= __('home.features.vendors.joinButton') %>
                        </a>
                    </div>
                </div>
            </div>
            
            <!-- For Wholesalers -->
            <div class="col-md-6">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
