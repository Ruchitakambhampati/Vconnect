<!DOCTYPE html>
<html lang="<%= locale %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title + ' - ' : '' %>VConnect </title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Feather Icons -->
    <link href="https://cdn.jsdelivr.net/npm/feather-icons@4.29.0/dist/feather.css" rel="stylesheet">
    
    <!-- Custom CSS -->
    <link href="/css/style.css" rel="stylesheet">
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i data-feather="truck" class="me-2"></i>
                VConnect ✌️
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <% if (user) { %>
                        <% if (user.role === 'vendor') { %>
                            <li class="nav-item">
                                <a class="nav-link" href="/vendor/dashboard">
                                    <i data-feather="home" class="me-1"></i>
                                    Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/vendor/contracts">
                                    <i data-feather="file-text" class="me-1"></i>
                                    Contracts
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/vendor/orders">
                                    <i data-feather="shopping-cart" class="me-1"></i>
                                    Orders
                                </a>
                            </li>
                        <% } else if (user.role === 'wholesaler') { %>
                            <li class="nav-item">
                                <a class="nav-link" href="/wholesaler/dashboard">
                                    <i data-feather="home" class="me-1"></i>
                                    Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/wholesaler/contracts">
                                    <i data-feather="file-text" class="me-1"></i>
                                    Contracts
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/wholesaler/deliveries">
                                    <i data-feather="truck" class="me-1"></i>
                                    Deliveries
                                </a>
                            </li>
                        <% } %>
                    <% } %>
                </ul>
                
                <ul class="navbar-nav">
                   
                    <% if (user) { %>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                <i data-feather="user" class="me-1"></i>
                                <%= user.name %>
                            </a>
                            <ul class="dropdown-menu">
                                <li><h6 class="dropdown-header"><%= user.role.charAt(0).toUpperCase() + user.role.slice(1) %></h6></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form action="/auth/logout" method="POST" class="d-inline">
                                        <button type="submit" class="dropdown-item">
                                            <i data-feather="log-out" class="me-1"></i>
                                            Log Out
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    <% } else { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/auth/login">
                                <i data-feather="log-in" class="me-1"></i>
                                Log In
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/auth/register">
                                <i data-feather="user-plus" class="me-1"></i>
                                Register
                            </a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Alert Container -->
    <div id="alert-container" class="container mt-3"></div>

    <!-- Main Content -->
    <main class="<%= typeof containerClass !== 'undefined' ? containerClass : 'container my-4' %>">
        <%- body %>
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-light py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5>VendorConnect</h5>
                    <p class="mb-0">Connecting vendors and wholesalers seamlessly.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="mb-0">&copy; 2025 VendorConnect. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Feather Icons -->
    <script src="https://cdn.jsdelivr.net/npm/feather-icons@4.29.0/dist/feather.min.js"></script>
    
    <!-- Custom JS -->
    <script src="/js/main.js"></script>
    
    <!-- Initialize Feather Icons -->
    <script>
        feather.replace();
    </script>
    
    <!-- Page-specific scripts -->
    <% if (typeof scripts !== 'undefined') { %>
        <%- scripts %>
    <% } %>
</body>
</html>